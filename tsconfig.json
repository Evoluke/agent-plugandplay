{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom","dom.iterable","esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                       // <- adicione
    "paths": {
      "@/*": ["src/*"],                   // mantÃ©m seu src
      "@/ui/*": ["ui/*"],                 // mapeia ui/
      "@/components/*": ["components/*"], // mapeia components/
      "@/styles/*": ["styles/*"]          // mapeia styles/
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts","**/*.ts","**/*.tsx",".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}